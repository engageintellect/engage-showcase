---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"project">["data"];

const { title, description, publishDate, updatedDate, image } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main class="max-w-4xl mx-auto px-2 my-2">
      <!-- <a href="/project" class="text-xl font-bold">‚Üê Projects</a> -->
      <article>
        <div class="">
          {
            image && (
              <img
                class="max-h-72 object-cover rounded-xl shadow"
                width={1020}
                height={510}
                src={image}
                alt=""
              />
            )
          }
        </div>
        <div class="prose">
          <div class="flex flex-col justify-center items-center py-5">
            <div class="font-extrathin text-neutral-500">
              <FormattedDate date={publishDate} />
              {
                updatedDate && (
                  <div>
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <div class="text-3xl">{title}</div>
          </div>
          <hr />
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>

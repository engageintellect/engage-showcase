---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"project">["data"];

const { title, description, pubDate, updatedDate, image, tags, category } =
  Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <main class="max-w-4xl mx-auto px-2 my-2">
      <!-- <a href="/project" class="text-xl font-bold">‚Üê Projects</a> -->
      <article>
        <div class="relative">
          {
            image && (
              <img
                class="max-h-72 object-cover rounded-xl shadow"
                width={1020}
                height={510}
                src={image}
                alt=""
              />
            )
          }
          <div class="absolute top-0 bg-teal-500 p-2">{category}</div>
        </div>
        <div class="prose">
          <div class="flex flex-col justify-center items-center py-5">
            <div class="font-extrathin text-neutral-500">
              <FormattedDate date={pubDate} />
              {
                updatedDate && (
                  <div>
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <div class="text-3xl">{title}</div>

            {
              tags && (
                <div class="flex gap-1 my-2 w-full flex-wrap justify-center">
                  {tags.map((tag) => (
                    <div class="bg-neutral-900 text-white text-xs font-semibold text-[0.8rem] px-2 py-1 rounded">
                      {tag}
                    </div>
                  ))}
                </div>
              )
            }
          </div>
          <hr />
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>

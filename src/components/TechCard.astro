---
const { title, description, iconName, cardUrl } = Astro.props;
import { Icon } from "astro-icon";
---

<a
  href={cardUrl}
  target="_blank"
  class="group w-64 sm:w-full border border-gray-900/20 rounded hover:shadow-md transition-all duration-200 h-full flex"
>
  <div class="flex flex-col gap-2 p-2">
    <div class="flex gap-2 items-center">
      <div class="md:group-hover:scale-[102%] transition-all duration-300">
        <Icon name={iconName} width="32" />
      </div>

      <div class="text-lg font-bold capitalize">
        {title}
      </div>
    </div>

    <div class="text-sm">
      {description}
    </div>
  </div>
</a>

---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";

const posts = (await getCollection("project")).sort(
  (a, b) => a.data.publishDate.valueOf() - b.data.publishDate.valueOf()
);

const sortedPosts = [...posts].sort((a, b) => {
  const dateA: Date = new Date(a.data.publishDate);
  const dateB: Date = new Date(b.data.publishDate);
  return dateB.getTime() - dateA.getTime(); // Sort in reverse chronological order
});
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style></style>
  </head>
  <body>
    <Header />
    <main class="px-2 max-w-4xl mx-auto py-2">
      <section>
        <div class="grid sm:grid-cols-2 gap-5">
          {
            sortedPosts.map((post) => (
              <div class="group shadow rounded-xl sm:hover:shadow-lg transition-all duration-200">
                <a href={`/project/${post.slug}/`}>
                  <img
                    class="h-64 rounded-t-xl object-cover w-full transition-all duration-200"
                    src={post.data.image}
                    alt=""
                  />

                  <div class="p-2">
                    <div class="text-xl">{post.data.title}</div>
                    <div class="text-neutral-500 font-extrathin">
                      <FormattedDate date={post.data.publishDate} />
                    </div>
                  </div>
                </a>
              </div>
            ))
          }
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
